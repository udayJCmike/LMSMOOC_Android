<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="6dip"
    android:weightSum="2" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="165dp" >

        <LinearLayout
            android:id="@+id/linearone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:paddingLeft="20dp" >

            <TextView
                android:id="@+id/coursename"
                style="@style/custom_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:text="thendral"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/author"
                style="@style/custom_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:text="thendral"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="15dp" />

            <ImageView
                android:id="@+id/promoimage"
                android:layout_width="130dp"
                android:layout_height="24dp"
                android:scaleType="fitXY"
                android:src="@drawable/promocode" />
        </LinearLayout>

        <View
            android:id="@+id/vc"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/linearone" >
        </View>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/vc"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/cover"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="false"
                android:focusable="false"
                android:scaleType="fitXY"
                android:src="@drawable/ban3" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp" >
    </View>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:paddingLeft="20dp" >

            <TextView
                android:id="@+id/rating"
                style="@style/custom"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:text="Rating"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ImageView
                android:id="@+id/ratingimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zero" />
        </LinearLayout>

        <TextView
            android:id="@+id/enroll"
            style="@style/custom"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/linear3"
            android:clickable="false"
            android:focusable="false"
            android:text="Enrolled"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#4B9500"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:paddingLeft="20dp" >

            <TextView
                android:id="@+id/costamt"
                style="@style/custom"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:text="Price"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/cost"
                style="@style/custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:text="TextView" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>